<resources>

    <style name="Theme.Bacon" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- customized color palette -->
        <item name="colorPrimary">@color/deep_orange_500</item>
        <item name="colorPrimaryDark">@color/deep_orange_700</item>
        <item name="colorAccent">@color/lime_A400</item>

        <item name="android:textColorPrimary">@color/grey_900</item>
        <item name="android:textColorSecondary">@color/grey_600</item>
        <item name="android:windowBackground">@color/white</item>

    </style>

    <style name="Theme.Bacon.NoActionBar" parent="Theme.Bacon">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Bacon.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="Theme.Bacon.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

